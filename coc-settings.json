{
  "coc.preferences.formatOnSaveFiletypes": [
    "dart",
    "css",
    "json",
    "markdown",
    "python",
    "php",
    "graphql",
    "go",
    "typescript",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "xml"
  ],
  "coc.preferences.hoverTarget": "float",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  }
}
